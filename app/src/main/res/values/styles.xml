<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ApplicationTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/app_bg_color</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="ApplicationTheme.AppBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@color/app_bar_bg_color</item>
        <item name="android:textColor">@color/text_color_white</item>
    </style>

</resources>